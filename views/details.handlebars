<div id="detailsPage">

    <div class="jumbotron big-banner">
    <br>
    <h1 class="display-4 text-center">ONLINE GARAGE SALE!</h1>
    <p class="lead text-center">Find a bargain in your neighborhood</p>
  </div>

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <a href="/listings"><button class="btn btn-danger px-4">Back</button></a>
            </div>
        </div>

        <div class="row d-flex text-center">
            <div class="col-md-12">
                <h2 class="display-4 listing-title">{{ listing.title }}</h2>
            </div>
        </div>

        <hr class="my-3">

        <div class="row my-4">
            <div class="col-md-6">
                <h3 class="display-5">Item Description</h3>
                <p>{{ listing.description }}</p>
                <h2>TODO!!!</h2>
            </div>
            <div class="col-md-6">
                <img class="listing-image" src="{{ listing.image }}" alt="item image">
                {{#if listing.isFree}}
                    <h3 class="font-weight-bold">Free!</h3>
                {{else}}
                    <h3 class="font-weight-bold">${{ listing.price }}</h3>
                {{/if}}
            </div>
        </div>

  </div>

</div>